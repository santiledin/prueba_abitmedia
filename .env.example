# Configuración de Base de Datos
# Host de la base de datos (nombre, IP o nombre del servicio Docker)
DB_HOST=db

# Nombre de la base de datos
DB_NAME=yii2_inventory

# Usuario de la base de datos
DB_USER=yii2_user

# Contraseña del usuario de la base de datos
DB_PASSWORD=yii2_password

# Contraseña root de MySQL (solo necesaria para el setup inicial de Docker)
MYSQL_ROOT_PASSWORD=root_password

# Entorno de la aplicación (dev o prod)
YII_ENV=dev

# Modo de depuración (true o false)
YII_DEBUG=true

# Clave secreta para validación de cookies (generar una cadena aleatoria segura)
COOKIE_VALIDATION_KEY=cambiar_por_una_clave_secreta_segura
